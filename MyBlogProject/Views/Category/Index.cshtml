@using EntityLayer.Concrete;
@model List<Category>
@{
    Layout = null;
}
<!DOCTYPE html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <table class="table table-bordered">
       
        <thead>
            <tr>
               
                <th>ID</th>
                <th>NAME</th>
                <th>DESCRIPTION</th>
                <th>Status</th>
                <th>Sil</th>
                <th>Fəaliyyətlər</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.IsDeactive</td>
                <td><a href="#" class="btn btn-primary">Sil</a></td>
                <td><a href="#" class="btn btn-danger">Detaylar</a></td>
                <td></td>
            </tr>
                    }
                

            </tbody>
    </table>
</body>

</html>

