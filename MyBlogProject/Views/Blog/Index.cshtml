@using EntityLayer.Concrete;
@model List<Blog>


    <section class="main-content-w3layouts-agileits">
        <div class="container">
            <h3 class="tittle">Blog Posts</h3>
            <div class="inner-sec">
                <!--left-->
                <div class="left-blog-info-w3layouts-agileits text-left">
                    <div class="row">
                        @foreach (var item in Model)
                        {
                            <div class="col-lg-4 card">
                                <a asp-controller="Blog" asp-action="Detail" asp-route-id="@item.Id">
                                    <img src="~/images/@item.BlogImage" class="card-img-top img-fluid" alt="">
                                </a>
                                <div class="card-body">
                                    <ul class="blog-icons my-4">
                                        <li>
                                            <a href="#">
                                                <i class="far fa-calendar-alt"></i> @(((DateTime)item.BlogCreateDate).ToString("dd.MM.yyyy"))                                           </a>
                                        </li>
                                        <li class="mx-2">
                                            <a href="#">
                                                <i class="far fa-comment">0</i> 
                                            </a>
                                        </li>
                                        <li>
                                            <a href="#">
                                                <i class="fas fa-eye"></i> @item.Category.Name
                                            </a>
                                        </li>

                                    </ul>
                                    <h5 class="card-title">
                                        <a href="single.html">@item.Name</a>
                                    </h5>
                                    <p class="card-text mb-3">@item.Content.Substring(0,item.Content.Substring(0,120).LastIndexOf(""))...</p>
    <!--Substring metodu ilə biz göstəriləck elementlərin sayını,LastIndexOf ilə isə sonuncu sözün tam gəlməsini təmin edirik-->
                                       

                                    <a asp-controller="Blog" asp-action="Detail" asp-route-id="@item.Id" class="btn btn-primary read-m">Ətraflı</a>
                                </div>
                            </div>
                        }



                    </div>
                    <!--//left-->
                </div>
            </div>
        </div>
    </section>



